<Window x:Class="PeterAlert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeterAlert"
        mc:Ignorable="d"
        Title="Peter Alert" Height="220" Width="260">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="pack://application:,,,/Peter.png"/>
        <Button Grid.Row="1" Margin="10" Name="OK" Click="OK_Click" >OK</Button>
    </Grid>
</Window>
